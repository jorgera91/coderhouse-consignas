extend layout/template.pug
block content
  div.container
    h1 Crear Producto
    if !(success) && alert
      div(class="alert alert-danger")=message
    else if success && alert
      div(class="alert alert-success")=message

    form(action="/productos" method="POST")
      div.mb-3
        label(for="title" class="form-label") Nombre
        input(type="text" id="title" name="title"  class="form-control" )
      div.mb-3
        label(for="price" class="form-label") Precio
        input(type="text" id="price", name="price"  class="form-control" )
      div.mb-3
        label(for="thumbnail" class="form-label") Foto 
        input(type="text" id="thumbnail" name="thumbnail"  class="form-control" )
      button(class="btn btn-success") Crear Producto

